<?xml version="1.0"?>

<JWM>
	<StartupCommand>
		./.fehbg
		numlockx
		xcompmgr -c -t -3 -l -6 -r 4 -o .64
	</StartupCommand>

    <Desktops width="2" height="1"></Desktops>

    <Tray y="-16" width="480" halign="center" height="32">
        <Spacer width="32"/>
        <TaskList maxwidth="64"/>
        <Spacer width="32"/>
        <Clock format="%H:%M"></Clock>
        <Spacer width="32"/>
    </Tray>

    <Group><Option>centered</Option></Group>

    <WindowStyle>
        <Width>1</Width>
        <Height>1</Height>
        <Opacity>1</Opacity>
        <Outline>#4A3637</Outline>
        <Active>
            <Outline>#775759</Outline>
        </Active>
    </WindowStyle>

    <TrayStyle>
        <Background>#1C1D1F</Background>
        <Foreground>#535C5C</Foreground>
        <Opacity>1</Opacity>
    </TrayStyle>

    <TaskListStyle>
        <Foreground>#6D715E</Foreground>
        <Font>-benis-lemon-medium-r-normal--10-110-75-75-m-50-ISO10646-1</Font>
        <Active>
            <Foreground>#7B8748</Foreground>
            <Background>#1C1D1F</Background>
        </Active>
    </TaskListStyle>

    <ClockStyle>
        <Font>-benis-lemon-medium-r-normal--10-110-75-75-m-50-ISO10646-1</Font>
    </ClockStyle>

    <PopupStyle enabled="false"/>

    <FocusModel>click</FocusModel>
    <SnapMode distance="20">border</SnapMode>
    <MoveMode coordinates="off">opaque</MoveMode>
    <ResizeMode coordinates="off">opaque</ResizeMode>

    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="A" key="F4">close</Key>
    <Key mask="4" key="Right">rdesktop</Key>
    <Key mask="4" key="Left">ldesktop</Key>
    <Key mask="4" key="m">maximize</Key>
    <Key mask="4" key="i">minimize</Key>
    <Key mask="4" key="e">exec: rofi -show run</Key>
    <Key mask="4" key="t">exec: urxvt -title urxvt</Key>
    <Key mask="4" key="r">exec: jwm -restart</Key>
    <Key mask="4" key="p">exec: poweroff</Key>
    <Key key="Print">exec: scrot sct/$RANDOM.png</Key>

    <Mouse context="root" button="1">exec: feh --randomize --bg-fill img</Mouse>
</JWM>
