push () {
	git add -A
	printf " commit: >> "
	read -r ans
	git commit -m "${ans:-"Commit."}"
	git push
}

upload () {
	basefile=$(basename "$1" | sed -e 's/[^a-zA-Z0-9._-]/-/g')
	curl --progress-bar --upload-file "$1" "https://transfer.sh/$basefile"
}

wifi () {
	sudo ip link set wlp6s2 up
	sudo iw wlp6s2 connect -w nxos
}

if [[ -z $SSH_TTY ]] && [[ -z $DISPLAY ]]; then
	setleds -D +num
	wifi
fi

color () {
	c=
	for a in 1 2 3 4 5 6; do
		c=$c$(shuf -n 1 -e 3 4)
	done
	printf "\e]11;#$c\007"
}

color

export PS1=$(printf "\e[36m #@ \033[0m")

export EDITOR="micro"
export VISUAL="xterm -g 64x64 -e micro"

export GOPATH="$HOME/git/go"

alias ls="ls --color"
alias la="ls -A"

clone () { git clone https://github.com/$1; }
