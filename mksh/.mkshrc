[[ ! -n $DISPLAY ]]	&& setleds -D +num

export PS1="$(tput setaf 2) >> $(tput sgr0)"
export EDITOR="micro"
export VISUAL="urxvt -g 86x80 -e micro %f"

alias ls="ls --color=always"
alias la="ls --color=always -A"

push () {
	git add -A
	printf " commit: >> "
	read -r ans
	git commit -m "${ans:-'Commit.'}"
	git push
}

readpdf () {
	epdfview $1 &
}
