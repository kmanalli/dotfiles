[[ ! -n $DISPLAY ]]	&& setleds -D +num

export PS1=`printf '\033[34m #: \033[0m'`
export EDITOR="micro"
export VISUAL="urxvt -g 86x70 -e micro $@"

alias cls="clear"
alias ls="ls --color=always"
alias la="ls --color=always -A"

push () {
	git add -A
	printf " commit: >> "
	read -r ans
	git commit -m "${ans:-"Nothing interesting to say"}"
	git push
}
