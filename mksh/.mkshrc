push () {
	git add -A
	printf " commit: >> "
	read -r ans
	git commit -m "${ans:-"Commit."}"
	git push
}

upload () {
	basefile=$(basename "$1" | sed -e 's/[^a-zA-Z0-9._-]/-/g')
	curl --progress-bar --upload-file "$1" "https://transfer.sh/$basefile"
}

wifi () {
	sudo ip link set wlp6s2 up
	sudo iw wlp6s2 connect -w deadbeef
}

[[ -z $SSH_TTY ]] && [[ -z $DISPLAY ]]  &&  {
	setleds -D +num
	wifi &
}

export PS1=$(printf "\033[36m #@ \033[0m")

export EDITOR="micro"
export VISUAL="xterm -g 64x64 -e micro"

export GOPATH="$HOME/git/go"

alias ls="ls --color"
alias la="ls -A"
