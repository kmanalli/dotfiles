[[ ! -n $DISPLAY ]]	&& setleds -D +num

export PS1="$(tput setaf 3) -- $(tput sgr0)"
export EDITOR='eval urxvt -e micro 2> /dev/null || micro'

alias ls="ls --color=always"
alias la="ls --color=always -A"

push() {
	git add -A
	printf " commit: >> "
	read -r ans
	git commit -m "${ans:-'Commit.'}"
	git push
}
